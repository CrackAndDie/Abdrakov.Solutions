	</UserControl.Styles>

	<Grid>
		<ScrollViewer HorizontalScrollBarVisibility="Disabled"
					  Classes="AbdrakovScrollViewer">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="100" />
					<RowDefinition Height="300" />
					<RowDefinition Height="300" />
					<RowDefinition Height="300" />
				</Grid.RowDefinitions>

				<Grid Grid.Row="0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
						<ColumnDefinition />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>

					<Button Margin="15, 0"
                            Height="46"
							Classes="OutlinedRoundedButton"
                            HorizontalAlignment="Stretch"
                            Command="{Binding ChangeThemeCommand}">
						<TextBlock Text="{LocalizedResource {Binding ChangeThemeTag}}"
                                   Foreground="{DynamicResource TextForegroundBrush}"
								   FontSize="20"
								   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
					</Button>

					<ComboBox Margin="15, 0"
                              Grid.Column="1"
                              Height="46"
                              FontSize="20"
							  Classes="AbdrakovComboBox"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
							  DisplayMemberBinding="{Binding Name}">
					</ComboBox>

					<Grid Margin="15"
                          Grid.Column="2">
						<Border x:Name="mask"
                                Background="{DynamicResource WindowBrush}"
                                CornerRadius="8"
								ClipToBounds="True">
							<UniformGrid Columns="3" ClipToBounds="True">
								<!--<UniformGrid.OpacityMask>
								<VisualBrush Visual="{Binding ElementName=mask}"/>
							</UniformGrid.OpacityMask>-->
								<Rectangle Fill="{DynamicResource TestBrush}"
										   Opacity="0.8" />
								<Rectangle Fill="{Binding BindableBrush}"
										   Opacity="0.8"/>
								<Rectangle Fill="Green"
										   Opacity="0.8" />
							</UniformGrid>
						</Border>
					</Grid>
				</Grid>
			</Grid>
		</ScrollViewer>
	</Grid>
